<!DOCTYPE html>
<html>
  <head>
    <title>Cakeshop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <ul>
          <% if user_signed_in? %>
            <li><%= link to 'マイページ', '#' %></li>
            <li><%= link_to '商品一覧', '#' %></li>
            <li><%= link_to 'カート', '#' %></li>
            <li><%= link_to 'ログアウト', destroy_user_session_path %></li>
          <% elsif admin_signed_in? %>
            <li><%= link_to '商品一覧', '#' %></li>
            <li><%= link_to '会員一覧', '#' %></li>
            <li><%= link_to '注文履歴一覧', '#' %></li>
            <li><%= link_to 'ジャンル一覧', '#' %></li>
            <li><%= link_to 'ログアウト', destroy_admin_session_path %></li>
          <% else %>
            <li><%= link_to 'About', '#' %></li>
            <li><%= link_to '商品一覧', '#' %></li>
            <li><%= link_to '新規登録', new_user_registration_path %></li>
            <li><%= link_to 'ログイン', user_session_path %>
          <% end %>
        </ul>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
